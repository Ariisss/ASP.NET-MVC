
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/mainLayout.cshtml";
    @model WebApplication1.Models.viewModel
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    @if (Model.LayoutModel.RoleName == "Manager")
    {
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Add Work Order</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="@Url.Action("addTask","Home")">Open Task Form</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Users
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Role</th>
                        <th>Email</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dynamic Rows -->
                    @if (Model.LayoutModel.RoleName == "Admin" || Model.LayoutModel.RoleName == "Manager")
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.first_name</td>
                                <td>@user.Role.role_name</td>
                                <td>@user.email</td>
                                <td>@user.last_name</td>
                            </tr>
                        }
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Role</th>
                        <th>Email</th>
                        <th>Last Name</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>